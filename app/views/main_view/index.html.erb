<div class="top-bar">
    <div class="top-bar-left">
        <ul class="menu">
            <li class="menu-text">UAH Maps</li>
            <li><input type="search" class="small" placeholder="Ir"/></li>
            <li>
                <button id="center_on_user_location_button" type="button" class="button secondary small">
                    <i class="fi-compass top-bar-icon"></i></button>
            </li>
            <li>
                <button type="button" class="button small secondary" >
                    <i class="fi-heart top-bar-icon"></i>
                </button>
            </li>
        </ul>
    </div>
</div>

<%= map(center: {
    latlng: [
        @default_location.longitude,
        @default_location.latitude ],
    zoom: 18,
  },
  markers: @markers
) %>
